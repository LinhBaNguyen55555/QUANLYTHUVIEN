@model QUANLYTHUVIEN.Models.Order

@{
    ViewData["Title"] = "Chỉnh sửa Đơn hàng nhập";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa Đơn hàng nhập #@Model.OrderId</h6>
    </div>
    <div class="card-body">
        @if (ViewData.ModelState.ErrorCount > 0 && !ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Có lỗi xảy ra:</strong>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="OrderDate" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SupplierId" class="control-label font-weight-bold">
                            Nhà cung cấp <span class="text-danger">*</span>
                        </label>
                        <select asp-for="SupplierId" class="form-control">
                            <option value="">Chọn nhà cung cấp</option>
                            @if (ViewBag.Suppliers != null)
                            {
                                foreach (var supplier in ViewBag.Suppliers as IEnumerable<QUANLYTHUVIEN.Models.Supplier>)
                                {
                                    <option value="@supplier.SupplierId" selected="@(supplier.SupplierId == Model.SupplierId ? "selected" : null)">
                                        @supplier.SupplierName (@(supplier.Phone ?? "No phone"))
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserId" class="control-label font-weight-bold">
                            Nhân viên xử lý <span class="text-danger">*</span>
                        </label>
                        <select asp-for="UserId" class="form-control">
                            <option value="">Chọn nhân viên</option>
                            @if (ViewBag.Users != null)
                            {
                                foreach (var user in ViewBag.Users as IEnumerable<QUANLYTHUVIEN.Models.User>)
                                {
                                    <option value="@user.UserId" selected="@(user.UserId == Model.UserId ? "selected" : null)">
                                        @user.FullName (@user.Username)
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Thông tin đơn hàng</label>
                        <div class="card bg-light">
                            <div class="card-body">
                                <small>
                                    <strong>Ngày tạo:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")<br />
                                    <strong>Số loại sách:</strong> @Model.OrderDetails.Count<br />
                                    <strong>Tổng số lượng:</strong> @Model.OrderDetails.Sum(od => od.Quantity)<br />
                                    <strong>Tổng tiền:</strong> @Model.TotalAmount?.ToString("N0") VNĐ
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
                <a href="@Url.Action("Index", "Order")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
                <a href="@Url.Action("Delete", "Order", new { id = Model.OrderId })"
                   class="btn btn-danger float-right"
                   onclick="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?')">
                    <i class="fas fa-trash"></i> Xóa đơn hàng
                </a>
            </div>
        </form>
    </div>
</div>


