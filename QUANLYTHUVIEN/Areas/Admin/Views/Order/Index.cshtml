@model IEnumerable<QUANLYTHUVIEN.Models.Order>

@{
    ViewData["Title"] = "Quản lý Đơn hàng nhập";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Đơn hàng nhập</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Order")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Tạo đơn hàng mới
                </a>
            </div>
        </div>

        <!-- Search and Filter Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm theo nhà cung cấp, nhân viên..."
                               value="@ViewBag.SearchString" style="min-width: 250px;" />
                    </div>
                    <div class="form-group mr-3">
                        <select name="supplierId" class="form-control form-control-sm">
                            <option value="">Tất cả nhà cung cấp</option>
                            @if (ViewBag.Suppliers != null)
                            {
                                foreach (var supplier in ViewBag.Suppliers)
                                {
                                    <option value="@supplier.SupplierId"
                                            selected="@(ViewBag.SelectedSupplierId == supplier.SupplierId ? "selected" : null)">
                                        @supplier.SupplierName
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "Order")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Chưa có đơn hàng nào. <a href="@Url.Action("Create", "Order")">Tạo đơn hàng đầu tiên</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Nhà cung cấp</th>
                            <th>Nhân viên xử lý</th>
                            <th>Ngày đặt</th>
                            <th>Số sách</th>
                            <th>Tổng tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderId</td>
                                <td><strong>@item.Supplier?.SupplierName</strong></td>
                                <td>@(item.User?.FullName ?? "Chưa xác định")</td>
                                <td>@item.OrderDate?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge badge-info">@item.OrderDetails.Count</span>
                                </td>
                                <td>@item.TotalAmount?.ToString("N0") VNĐ</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", "Order", new { id = item.OrderId })"
                                           class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Order", new { id = item.OrderId })"
                                           class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Order", new { id = item.OrderId })"
                                           class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


