@model IEnumerable<QUANLYTHUVIEN.Models.Book>

@{
    ViewData["Title"] = "Quản lý Sách";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Sách</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Book")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm sách mới
                </a>
            </div>
        </div>

        <!-- Search and Filter Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm sách, tác giả, ISBN..."
                               value="@ViewBag.SearchString" style="min-width: 250px;" />
                    </div>
                    <div class="form-group mr-3">
                        <select name="categoryId" class="form-control form-control-sm">
                            <option value="">Tất cả thể loại</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.CategoryId"
                                            selected="@(ViewBag.SelectedCategoryId == category.CategoryId ? "selected" : null)">
                                        @category.CategoryName
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group mr-3">
                        <select name="authorId" class="form-control form-control-sm">
                            <option value="">Tất cả tác giả</option>
                            @if (ViewBag.Authors != null)
                            {
                                foreach (var author in ViewBag.Authors)
                                {
                                    <option value="@author.AuthorId"
                                            selected="@(ViewBag.SelectedAuthorId == author.AuthorId ? "selected" : null)">
                                        @author.AuthorName
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Chưa có sách nào. <a href="@Url.Action("Create", "Book")">Thêm sách đầu tiên</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Ảnh bìa</th>
                            <th>Thông tin sách</th>
                            <th>Thể loại</th>
                            <th>Tác giả</th>
                            <th>Số lượng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BookId</td>
                                <td>
                                    <img src="@Url.Content(item.CoverImageUrl)" alt="@item.Title"
                                         class="img-thumbnail" style="width: 60px; height: 80px; object-fit: cover;" />
                                </td>
                                <td>
                                    <strong>@item.Title</strong>
                                    @if (!string.IsNullOrEmpty(item.Isbn))
                                    {
                                        <br /><small class="text-muted">ISBN: @item.Isbn</small>
                                    }
                                    @if (item.PublishedYear.HasValue)
                                    {
                                        <br /><small class="text-muted">Năm: @item.PublishedYear</small>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br /><small class="text-muted">@item.TruncatedDescription</small>
                                    }
                                </td>
                                <td>
                                    @(item.Category?.CategoryName ?? "Chưa phân loại")
                                </td>
                                <td>
                                    @item.AuthorNames
                                </td>
                                <td>
                                    <span class="badge badge-info">@(item.Quantity ?? 0)</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", "Book", new { id = item.BookId })"
                                           class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Book", new { id = item.BookId })"
                                           class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Book", new { id = item.BookId })"
                                           class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


