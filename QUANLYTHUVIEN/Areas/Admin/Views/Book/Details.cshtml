@model QUANLYTHUVIEN.Models.Book

@{
    ViewData["Title"] = "Chi tiết Sách";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết Sách: @Model.Title</h6>
        <div>
            <a href="@Url.Action("Edit", "Book", new { id = Model.BookId })" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index", "Book")" class="btn btn-secondary btn-sm">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Url.Content(Model.CoverImageUrl)" alt="@Model.Title"
                     class="img-fluid rounded shadow" style="max-height: 300px;" />
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.BookId</dd>

                    <dt class="col-sm-4">Tiêu đề</dt>
                    <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                    <dt class="col-sm-4">ISBN</dt>
                    <dd class="col-sm-8">@Model.DisplayIsbn</dd>

                    <dt class="col-sm-4">Thể loại</dt>
                    <dd class="col-sm-8">@(Model.Category?.CategoryName ?? "Chưa phân loại")</dd>

                    <dt class="col-sm-4">Tác giả</dt>
                    <dd class="col-sm-8">@Model.AuthorNames</dd>

                    <dt class="col-sm-4">Nhà xuất bản</dt>
                    <dd class="col-sm-8">@(Model.Publisher?.PublisherName ?? "Chưa cập nhật")</dd>

                    <dt class="col-sm-4">Ngôn ngữ</dt>
                    <dd class="col-sm-8">@(Model.Language?.LanguageName ?? "Chưa cập nhật")</dd>

                    <dt class="col-sm-4">Năm xuất bản</dt>
                    <dd class="col-sm-8">@(Model.PublishedYear?.ToString() ?? "Chưa cập nhật")</dd>

                    <dt class="col-sm-4">Số lượng</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <hr />
            <h5>Mô tả sách</h5>
            <div class="border p-3 bg-light">
                @Model.Description
            </div>
        }
    </div>
</div>


