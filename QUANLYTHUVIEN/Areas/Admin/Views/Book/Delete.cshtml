@model QUANLYTHUVIEN.Models.Book

@{
    ViewData["Title"] = "Xóa Sách";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Xác nhận xóa Sách</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Cảnh báo!</strong> Hành động này không thể hoàn tác.
        </div>

        <h5>Bạn có chắc chắn muốn xóa sách này?</h5>

        <div class="row">
            <div class="col-md-4">
                <img src="@Url.Content(Model.CoverImageUrl)" alt="@Model.Title"
                     class="img-fluid rounded shadow" style="max-height: 200px;" />
            </div>
            <div class="col-md-8">
                <div class="card border-left-danger">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Tiêu đề:</dt>
                            <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                            <dt class="col-sm-4">ISBN:</dt>
                            <dd class="col-sm-8">@Model.DisplayIsbn</dd>

                            <dt class="col-sm-4">Thể loại:</dt>
                            <dd class="col-sm-8">@(Model.Category?.CategoryName ?? "Chưa phân loại")</dd>

                            <dt class="col-sm-4">Tác giả:</dt>
                            <dd class="col-sm-8">@Model.AuthorNames</dd>

                            <dt class="col-sm-4">Nhà xuất bản:</dt>
                            <dd class="col-sm-8">@(Model.Publisher?.PublisherName ?? "Chưa cập nhật")</dd>

                            <dt class="col-sm-4">Số lượng:</dt>
                            <dd class="col-sm-8">@Model.Quantity</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BookId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xóa sách
            </button>
            <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
            <a href="@Url.Action("Details", "Book", new { id = Model.BookId })" class="btn btn-info">
                <i class="fas fa-info-circle"></i> Xem chi tiết
            </a>
        </form>
    </div>
</div>


