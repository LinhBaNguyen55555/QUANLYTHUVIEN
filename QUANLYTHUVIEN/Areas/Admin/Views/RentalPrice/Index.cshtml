@model IEnumerable<QUANLYTHUVIEN.Models.RentalPrice>

@{
    ViewData["Title"] = "Quản lý Bảng giá cho thuê sách";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Bảng giá cho thuê sách</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "RentalPrice")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm bảng giá mới
                </a>
            </div>
        </div>

        <!-- Search and Filter Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm theo tên sách..."
                               value="@ViewBag.SearchString" style="min-width: 250px;" />
                    </div>
                    <div class="form-group mr-3">
                        <select name="bookId" class="form-control form-control-sm" style="min-width: 200px;">
                            <option value="">-- Tất cả sách --</option>
                            @foreach (var book in ViewBag.Books as List<QUANLYTHUVIEN.Models.Book>)
                            {
                                <option value="@book.BookId" selected="@(ViewBag.BookId != null && ViewBag.BookId.ToString() == book.BookId.ToString())">
                                    @book.Title
                                </option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "RentalPrice")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Chưa có bảng giá nào. <a href="@Url.Action("Create", "RentalPrice")">Thêm bảng giá đầu tiên</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Tên sách</th>
                            <th>Giá theo ngày</th>
                            <th>Giá theo tuần</th>
                            <th>Giá theo tháng</th>
                            <th>Ngày hiệu lực</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PriceId</td>
                                <td><strong>@item.Book?.Title</strong></td>
                                <td>
                                    <span class="badge badge-success">@item.DailyRate.ToString("N0") đ/ngày</span>
                                </td>
                                <td>
                                    @if (item.WeeklyRate.HasValue)
                                    {
                                        <span class="badge badge-info">@item.WeeklyRate.Value.ToString("N0") đ/tuần</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                                <td>
                                    @if (item.MonthlyRate.HasValue)
                                    {
                                        <span class="badge badge-primary">@item.MonthlyRate.Value.ToString("N0") đ/tháng</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                                <td>@(item.EffectiveDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", "RentalPrice", new { id = item.PriceId })"
                                           class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "RentalPrice", new { id = item.PriceId })"
                                           class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "RentalPrice", new { id = item.PriceId })"
                                           class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


