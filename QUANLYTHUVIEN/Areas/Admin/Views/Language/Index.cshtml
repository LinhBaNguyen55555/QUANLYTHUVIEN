@model IEnumerable<QUANLYTHUVIEN.Models.Language>

@{
    ViewData["Title"] = "Quản lý Ngôn ngữ";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Ngôn ngữ</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Language", new { area = "Admin" })" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm ngôn ngữ
                </a>
            </div>
        </div>

        <!-- Search Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm theo tên ngôn ngữ..."
                               value="@ViewBag.SearchString" style="min-width: 300px;" />
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "Language", new { area = "Admin" })" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <!-- Thông báo -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-info">Chưa có ngôn ngữ nào.</div>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên ngôn ngữ</th>
                        <th>Số sách</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LanguageId</td>
                            <td>@item.LanguageName</td>
                            <td>@item.Books.Count</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="@Url.Action("Details", "Language", new { area = "Admin", id = item.LanguageId })" class="btn btn-info btn-sm" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Language", new { area = "Admin", id = item.LanguageId })" class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Language", new { area = "Admin", id = item.LanguageId })" class="btn btn-danger btn-sm" title="Xóa"
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa ngôn ngữ này?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>



