@model QUANLYTHUVIEN.Models.Language

@{
    ViewData["Title"] = "Chi tiết Ngôn ngữ";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết Ngôn ngữ: @Model.LanguageName</h6>
        <div>
            <a href="@Url.Action("Edit", "Language", new { id = Model.LanguageId, fromDetails = true })" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index", "Language")" class="btn btn-secondary btn-sm">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.LanguageId</dd>

            <dt class="col-sm-3">Tên ngôn ngữ</dt>
            <dd class="col-sm-9"><strong>@Model.LanguageName</strong></dd>

            <dt class="col-sm-3">Số sách</dt>
            <dd class="col-sm-9">@Model.Books.Count sách</dd>
        </dl>

        @if (Model.Books.Any())
        {
            <hr />
            <h5>Danh sách sách (@Model.Books.Count)</h5>
            <div class="table-responsive">
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Tác giả</th>
                            <th>Thể loại</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Books.OrderBy(b => b.Title))
                        {
                            <tr>
                                <td>@book.BookId</td>
                                <td>@book.Title</td>
                                <td>@book.AuthorNames</td>
                                <td>@(book.Category?.CategoryName ?? "Chưa phân loại")</td>
                                <td>
                                    <a href="@Url.Action("Details", "Book", new { id = book.BookId })" class="btn btn-info btn-sm">Chi tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>





