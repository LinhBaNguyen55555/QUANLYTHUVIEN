@model QUANLYTHUVIEN.Models.Language

@{
    ViewData["Title"] = "Xóa Ngôn ngữ";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Xác nhận xóa Ngôn ngữ</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Cảnh báo!</strong> Hành động này không thể hoàn tác.
        </div>

        <h5>Bạn có chắc chắn muốn xóa ngôn ngữ này?</h5>

        <div class="card border-left-danger">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Tên ngôn ngữ:</dt>
                    <dd class="col-sm-9"><strong>@Model.LanguageName</strong></dd>

                    <dt class="col-sm-3">Số sách:</dt>
                    <dd class="col-sm-9">@Model.Books.Count sách</dd>
                </dl>

                @if (Model.Books.Any())
                {
                    <div class="alert alert-danger mt-3">
                        <strong>Lưu ý:</strong> Ngôn ngữ này có @Model.Books.Count sách. Nếu xóa ngôn ngữ này, các sách sẽ mất thông tin ngôn ngữ.
                    </div>
                }
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="LanguageId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xóa ngôn ngữ
            </button>
            <a href="@Url.Action("Index", "Language")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </form>
    </div>
</div>



