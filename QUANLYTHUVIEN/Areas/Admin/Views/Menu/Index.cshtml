@model IEnumerable<QUANLYTHUVIEN.Models.TbMenu>

@{
    ViewData["Title"] = "Quản lý Menu";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Menu</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Menu")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm menu mới
                </a>
            </div>
        </div>

        <!-- Search and Filter Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm theo tên menu..."
                               value="@ViewBag.SearchString" style="min-width: 250px;" />
                    </div>
                    <div class="form-group mr-3">
                        <select name="status" class="form-control form-control-sm">
                            <option value="">Tất cả trạng thái</option>
                            <option value="Active" selected="@(ViewBag.SelectedStatus == "Active" ? "selected" : null)">Hoạt động</option>
                            <option value="Inactive" selected="@(ViewBag.SelectedStatus == "Inactive" ? "selected" : null)">Không hoạt động</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "Menu")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>

    <!-- Thông báo -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Chưa có menu nào. <a href="@Url.Action("Create", "Menu")">Tạo menu đầu tiên</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Alias</th>
                            <th>URL</th>
                            <th>Cấp</th>
                            <th>Menu cha</th>
                            <th>Vị trí</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MenuId</td>
                                <td>
                                    <strong>@item.Title</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br /><small class="text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>@item.Alias</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Url))
                                    {
                                        <a href="@item.Url" target="_blank" class="text-primary">
                                            @item.Url <i class="fas fa-external-link-alt"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có URL</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-info">Cấp @item.Levels</span>
                                </td>
                                <td>
                                    @(item.Parent != null ? item.Parent.Title :
                                      item.ParentId.HasValue ? "Menu cha đã xóa" : "Không có")
                                </td>
                                <td>@item.Position</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i> Hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times"></i> Không hoạt động
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", "Menu", new { id = item.MenuId })"
                                           class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Menu", new { id = item.MenuId })"
                                           class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Menu", new { id = item.MenuId })"
                                           class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
