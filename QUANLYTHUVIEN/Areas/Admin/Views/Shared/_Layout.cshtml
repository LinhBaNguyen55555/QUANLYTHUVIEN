<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">SB Admin <sup>2</sup></div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Báo cáo tổng quan -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Dashboard", "Report", new { area = "Admin" })">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Báo cáo tổng quan</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Quản lý nội dung
            </div>

            <!-- Nav Item - Menu Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Menu", new { area = "Admin" })">
                    <i class="fas fa-fw fa-bars"></i>
                    <span>Quản lý Menu</span>
                </a>
            </li>

            <!-- Nav Item - Book Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Book", new { area = "Admin" })">
                    <i class="fas fa-fw fa-book"></i>
                    <span>Quản lý Sách</span>
                </a>
            </li>

            <!-- Nav Item - Category Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Category", new { area = "Admin" })">
                    <i class="fas fa-fw fa-tags"></i>
                    <span>Quản lý Thể loại</span>
                </a>
            </li>

            <!-- Nav Item - Author Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Author", new { area = "Admin" })">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Quản lý Tác giả</span>
                </a>
            </li>

            <!-- Nav Item - Publisher Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Publisher", new { area = "Admin" })">
                    <i class="fas fa-fw fa-building"></i>
                    <span>Quản lý Nhà xuất bản</span>
                </a>
            </li>

            <!-- Nav Item - Language Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Language", new { area = "Admin" })">
                    <i class="fas fa-fw fa-language"></i>
                    <span>Quản lý Ngôn ngữ</span>
                </a>
            </li>

            <!-- Nav Item - Blog Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Blog", new { area = "Admin" })">
                    <i class="fas fa-fw fa-blog"></i>
                    <span>Quản lý Bài viết</span>
                </a>
            </li>

            <!-- Nav Item - Comment Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Comment", new { area = "Admin" })">
                    <i class="fas fa-fw fa-comments"></i>
                    <span>Quản lý Bình luận</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Quản lý đơn hàng
            </div>

            <!-- Nav Item - Order Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Order", new { area = "Admin" })">
                    <i class="fas fa-fw fa-shopping-cart"></i>
                    <span>Quản lý Đơn hàng</span>
                </a>
            </li>

            <!-- Nav Item - Supplier Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Supplier", new { area = "Admin" })">
                    <i class="fas fa-fw fa-truck"></i>
                    <span>Quản lý Nhà cung cấp</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Quản lý thuê sách
            </div>

            <!-- Nav Item - Rental Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Rental", new { area = "Admin" })">
                    <i class="fas fa-fw fa-book-reader"></i>
                    <span>Quản lý Thuê sách</span>
                </a>
            </li>

            <!-- Nav Item - Rental Price Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "RentalPrice", new { area = "Admin" })">
                    <i class="fas fa-fw fa-dollar-sign"></i>
                    <span>Quản lý Bảng giá cho thuê</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Quản lý người dùng
            </div>

            <!-- Nav Item - Customer Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Customer", new { area = "Admin" })">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Quản lý Khách hàng</span>
                </a>
            </li>

            <!-- Nav Item - User Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "User", new { area = "Admin" })">
                    <i class="fas fa-fw fa-user-shield"></i>
                    <span>Quản lý Người dùng</span>
                </a>
            </li>

            <!-- Nav Item - Contact Management -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Contact", new { area = "Admin" })">
                    <i class="fas fa-fw fa-envelope"></i>
                    <span>Quản lý Liên hệ</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Báo cáo thống kê
            </div>

            <!-- Nav Item - Revenue Report -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Revenue", "Report", new { area = "Admin" })">
                    <i class="fas fa-fw fa-chart-line"></i>
                    <span>Báo cáo Doanh thu</span>
                </a>
            </li>

            <!-- Nav Item - Books Report -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Books", "Report", new { area = "Admin" })">
                    <i class="fas fa-fw fa-chart-bar"></i>
                    <span>Báo cáo Sách</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Logout -->
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#logoutModal">
                    <i class="fas fa-fw fa-sign-out-alt"></i>
                    <span>Đăng xuất</span>
                </a>
            </li>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            @RenderBody()
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Xác nhận đăng xuất</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn đăng xuất khỏi hệ thống quản trị?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <a class="btn btn-primary" href="@Url.Action("Logout", "Account", new { area = "Admin" })">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/admin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/admin/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/chart-area-demo.js"></script>
    <script src="~/admin/js/demo/chart-pie-demo.js"></script>

    @RenderSection("Scripts", required: false)
    
    <!-- Image Browser Modal -->
    @await Html.PartialAsync("_ImageBrowserModal")
</body>

</html>