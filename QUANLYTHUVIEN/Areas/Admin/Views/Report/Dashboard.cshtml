@model QUANLYTHUVIEN.Areas.Admin.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "Báo cáo tổng quan";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Báo cáo tổng quan</h1>
    <div>
        <a href="@Url.Action("Revenue", "Report")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-chart-line fa-sm text-white-50"></i> Báo cáo doanh thu
        </a>
        <a href="@Url.Action("Books", "Report")" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm ml-2">
            <i class="fas fa-book fa-sm text-white-50"></i> Báo cáo sách
        </a>
    </div>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Sách tổng cộng -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Tổng số sách</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalBooks.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-book fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Khách hàng -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Khách hàng</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalCustomers.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Phiếu thuê -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Phiếu thuê</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalRentals.ToString("N0")</div>
                        <div class="text-xs text-muted">@Model.ActiveRentals đang thuê</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-handshake fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Doanh thu tháng -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Doanh thu tháng @DateTime.Now.ToString("MM/yyyy")</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MonthlyRevenue.ToString("N0") VNĐ</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Biểu đồ doanh thu -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Doanh thu theo tháng (Năm @DateTime.Now.Year)</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                        aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("Revenue", "Report")">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Trạng thái phiếu thuê -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Trạng thái phiếu thuê</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4">
                    <canvas id="statusChart"></canvas>
                </div>
                <hr>
                @foreach (var status in Model.RentalStatusChart)
                {
                    <div class="d-flex align-items-center mb-2">
                        <div class="mr-3">
                            <span class="badge badge-@(status.Status == "Active" ? "warning" : status.Status == "Returned" ? "success" : "danger")">
                                @status.Status
                            </span>
                        </div>
                        <div class="text-xs">@status.Count phiếu</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Sách theo thể loại -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sách theo thể loại (Top 10)</h6>
            </div>
            <div class="card-body">
                @if (Model.BooksByCategory.Any())
                {
                    foreach (var category in Model.BooksByCategory)
                    {
                        var percentage = Model.TotalBooks > 0 ? (double)category.BookCount / Model.TotalBooks * 100 : 0;
                        <div class="d-flex align-items-center mb-3">
                            <div class="mr-3" style="width: 120px;">
                                <span class="text-xs font-weight-bold">@category.CategoryName</span>
                            </div>
                            <div class="flex-grow-1">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-primary" role="progressbar"
                                         style="width: @percentage%"></div>
                                </div>
                            </div>
                            <div class="ml-3">
                                <span class="text-xs">@category.BookCount cuốn</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Chưa có dữ liệu</p>
                }
            </div>
        </div>
    </div>

    <!-- Top sách được thuê -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sách được thuê nhiều nhất (Top 10)</h6>
            </div>
            <div class="card-body">
                @if (Model.TopRentedBooks.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th>Sách</th>
                                    <th>Lượt thuê</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.TopRentedBooks)
                                {
                                    <tr>
                                        <td>
                                            <div class="text-xs font-weight-bold">@book.BookTitle</div>
                                            <div class="text-xs text-muted">@book.AuthorName</div>
                                        </td>
                                        <td>@book.RentalCount</td>
                                        <td>@book.TotalRevenue.ToString("N0") VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có dữ liệu</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Top khách hàng -->
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Khách hàng hoạt động nhất (Top 10)</h6>
            </div>
            <div class="card-body">
                @if (Model.TopCustomers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th>Khách hàng</th>
                                    <th>Số phiếu thuê</th>
                                    <th>Tổng chi tiêu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.TopCustomers)
                                {
                                    <tr>
                                        <td>@customer.CustomerName</td>
                                        <td>@customer.RentalCount</td>
                                        <td class="font-weight-bold text-success">@customer.TotalSpent.ToString("N0") VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có dữ liệu</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Biểu đồ doanh thu theo tháng
        var revenueCtx = document.getElementById("revenueChart");
        var revenueChart = new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MonthlyRevenueChart.Select(m => m.MonthName))),
                datasets: [{
                    label: "Doanh thu (VNĐ)",
                    lineTension: 0.3,
                    backgroundColor: "rgba(78, 115, 223, 0.05)",
                    borderColor: "rgba(78, 115, 223, 1)",
                    pointRadius: 3,
                    pointBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointBorderColor: "rgba(78, 115, 223, 1)",
                    pointHoverRadius: 3,
                    pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointHoverBorderColor: "rgba(78, 115, 223, 1)",
                    pointHitRadius: 10,
                    pointBorderWidth: 2,
                    data: @Html.Raw(Json.Serialize(Model.MonthlyRevenueChart.Select(m => m.Revenue))),
                }],
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        left: 10,
                        right: 25,
                        top: 25,
                        bottom: 0
                    }
                },
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'date'
                        },
                        gridLines: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            maxTicksLimit: 7
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            maxTicksLimit: 5,
                            padding: 10,
                            callback: function(value, index, values) {
                                return value.toLocaleString('vi-VN') + ' VNĐ';
                            }
                        },
                        gridLines: {
                            color: "rgb(234, 236, 244)",
                            zeroLineColor: "rgb(234, 236, 244)",
                            drawBorder: false,
                            borderDash: [2],
                            zeroLineBorderDash: [2]
                        }
                    }],
                },
                legend: {
                    display: false
                },
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    titleMarginBottom: 10,
                    titleFontColor: '#6c757d',
                    titleFontSize: 14,
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    intersect: false,
                    mode: 'index',
                    caretPadding: 10,
                    callbacks: {
                        label: function(tooltipItem, chart) {
                            var datasetLabel = chart.datasets[tooltipItem.datasetIndex].label || '';
                            return datasetLabel + ': ' + tooltipItem.yLabel.toLocaleString('vi-VN') + ' VNĐ';
                        }
                    }
                }
            }
        });

        // Biểu đồ trạng thái phiếu thuê
        var statusCtx = document.getElementById("statusChart");
        var statusChart = new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.RentalStatusChart.Select(s => s.Status))),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.RentalStatusChart.Select(s => s.Count))),
                    backgroundColor: ['#f6c23e', '#1cc88a', '#e74a3b'],
                    hoverBackgroundColor: ['#f4b619', '#17a673', '#be2617'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 80,
            },
        });
    </script>
}
