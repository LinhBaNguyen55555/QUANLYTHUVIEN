@model QUANLYTHUVIEN.Models.Rental

@{
    ViewData["Title"] = "Xóa Phiếu thuê sách";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Xác nhận xóa Phiếu thuê sách</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
            <p>Bạn có chắc chắn muốn xóa phiếu thuê sách này? Hành động này không thể hoàn tác và sẽ xóa tất cả thông tin liên quan.</p>
        </div>

        <div class="card border-danger">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID phiếu thuê</dt>
                    <dd class="col-sm-9">@Model.RentalId</dd>

                    <dt class="col-sm-3">Khách hàng</dt>
                    <dd class="col-sm-9"><strong>@Model.Customer?.FullName</strong></dd>

                    <dt class="col-sm-3">Nhân viên</dt>
                    <dd class="col-sm-9">@(Model.User?.FullName ?? "Chưa xác định")</dd>

                    <dt class="col-sm-3">Ngày thuê</dt>
                    <dd class="col-sm-9">@Model.RentalDate?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Trạng thái</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Status == "Returned" ? "badge-success" : Model.Status == "Overdue" ? "badge-danger" : "badge-warning")">
                            @(Model.Status == "Active" ? "Đang thuê" :
                              Model.Status == "Returned" ? "Đã trả" :
                              Model.Status == "Overdue" ? "Quá hạn" : Model.Status)
                        </span>
                    </dd>

                    <dt class="col-sm-3">Tổng tiền</dt>
                    <dd class="col-sm-9">@Model.TotalAmount?.ToString("N0") VNĐ</dd>
                </dl>
            </div>
        </div>

        @if (Model.RentalDetails.Any())
        {
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle"></i> Thông tin sách sẽ bị xóa</h6>
                <p>Phiếu thuê này chứa @Model.RentalDetails.Count cuốn sách:</p>
                <ul>
                    @foreach (var detail in Model.RentalDetails)
                    {
                        <li>@detail.Book?.Title (@detail.Quantity cuốn)</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="RentalId" />

            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa phiếu thuê
                </button>
                <a href="@Url.Action("Index", "Rental")" class="btn btn-secondary ml-2">
                    <i class="fas fa-arrow-left"></i> Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>


