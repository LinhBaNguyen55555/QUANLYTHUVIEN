@model QUANLYTHUVIEN.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa Người dùng: @Model.Username</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-area="Admin" asp-controller="User" method="post">
            <input type="hidden" name="id" value="@Model.UserId" />
            <input type="hidden" name="fromDetails" value="@(ViewBag.FromDetails == true ? "true" : "false")" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username" class="control-label font-weight-bold">
                            Tên đăng nhập <span class="text-danger">*</span>
                        </label>
                        <input type="text" id="username" name="username" class="form-control" value="@Model.Username" />
                        <small class="form-text text-muted">Tên đăng nhập không được trùng</small>
                        @if (ViewData.ModelState["Username"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger d-block">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</span>
                        }
                    </div>

                    <div class="form-group">
                        <label for="fullName" class="control-label font-weight-bold">
                            Họ và tên <span class="text-danger">*</span>
                        </label>
                        <input type="text" id="fullName" name="fullName" class="form-control" value="@Model.FullName" />
                        @if (ViewData.ModelState["FullName"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger d-block">@ViewData.ModelState["FullName"].Errors[0].ErrorMessage</span>
                        }
                    </div>

                    <div class="form-group">
                        <label for="email" class="control-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.Email" />
                        <small class="form-text text-muted">Email không được trùng</small>
                        @if (ViewData.ModelState["Email"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger d-block">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span>
                        }
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label">Mật khẩu mới</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Để trống nếu không đổi mật khẩu" />
                        <small class="form-text text-muted">Chỉ nhập mật khẩu mới nếu muốn thay đổi</small>
                        @if (ViewData.ModelState["password"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger d-block">@ViewData.ModelState["password"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="phone" class="control-label">Số điện thoại</label>
                        <input type="text" id="phone" name="phone" class="form-control" value="@Model.Phone" />
                        @if (ViewData.ModelState["Phone"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger d-block">@ViewData.ModelState["Phone"].Errors[0].ErrorMessage</span>
                        }
                    </div>

                    <div class="form-group">
                        <label for="roleId" class="control-label font-weight-bold">
                            Vai trò <span class="text-danger">*</span>
                        </label>
                        <select id="roleId" name="roleId" class="form-control">
                            <option value="">Chọn vai trò</option>
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var role in ViewBag.Roles as IEnumerable<QUANLYTHUVIEN.Models.TbRole>)
                                {
                                    <option value="@role.RoleId" selected="@(role.RoleId == Model.RoleId ? "selected" : null)">
                                        @role.RoleName
                                    </option>
                                }
                            }
                        </select>
                        @if (ViewData.ModelState["RoleId"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger d-block">@ViewData.ModelState["RoleId"].Errors[0].ErrorMessage</span>
                        }
                    </div>

                    <div class="form-group">
                        <label class="control-label">Thông tin bổ sung</label>
                        <div class="card bg-light">
                            <div class="card-body">
                                <small>
                                    <strong>Ngày tạo:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")<br />
                                    <strong>Số đơn hàng:</strong> @Model.Orders.Count<br />
                                    <strong>Số phiếu thuê:</strong> @Model.Rentals.Count<br />
                                    <strong>Số bài viết:</strong> @Model.TbBlogs.Count
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
                <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
                <a href="@Url.Action("Delete", "User", new { area = "Admin", id = Model.UserId })"
                   class="btn btn-danger float-right"
                   onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')">
                    <i class="fas fa-trash"></i> Xóa người dùng
                </a>
            </div>
        </form>
    </div>
</div>


