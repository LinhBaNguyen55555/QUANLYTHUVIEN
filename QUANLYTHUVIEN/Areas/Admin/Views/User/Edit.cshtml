@model QUANLYTHUVIEN.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa Người dùng: @Model.Username</h6>
    </div>
    <div class="card-body">
        @if (ViewData.ModelState.ErrorCount > 0 && !ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Có lỗi xảy ra:</strong>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Username" class="control-label font-weight-bold">
                            Tên đăng nhập <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Username" class="form-control" />
                        <small class="form-text text-muted">Tên đăng nhập không được trùng</small>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label font-weight-bold">
                            Họ và tên <span class="text-danger">*</span>
                        </label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <small class="form-text text-muted">Email không được trùng</small>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label">Mật khẩu mới</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Để trống nếu không đổi mật khẩu" />
                        <small class="form-text text-muted">Chỉ nhập mật khẩu mới nếu muốn thay đổi</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label font-weight-bold">
                            Vai trò <span class="text-danger">*</span>
                        </label>
                        <select asp-for="RoleId" class="form-control">
                            <option value="">Chọn vai trò</option>
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var role in ViewBag.Roles as IEnumerable<QUANLYTHUVIEN.Models.TbRole>)
                                {
                                    <option value="@role.RoleId" selected="@(role.RoleId == Model.RoleId ? "selected" : null)">
                                        @role.RoleName
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Thông tin bổ sung</label>
                        <div class="card bg-light">
                            <div class="card-body">
                                <small>
                                    <strong>Ngày tạo:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")<br />
                                    <strong>Số đơn hàng:</strong> @Model.Orders.Count<br />
                                    <strong>Số phiếu thuê:</strong> @Model.Rentals.Count<br />
                                    <strong>Số bài viết:</strong> @Model.TbBlogs.Count
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
                <a href="@Url.Action("Index", "User")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
                <a href="@Url.Action("Delete", "User", new { id = Model.UserId })"
                   class="btn btn-danger float-right"
                   onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')">
                    <i class="fas fa-trash"></i> Xóa người dùng
                </a>
            </div>
        </form>
    </div>
</div>

