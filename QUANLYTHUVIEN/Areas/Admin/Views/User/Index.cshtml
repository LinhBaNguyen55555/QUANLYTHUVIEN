@model IEnumerable<QUANLYTHUVIEN.Models.User>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Người dùng</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "User")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm người dùng
                </a>
            </div>
        </div>

        <!-- Search and Filter Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm theo tên đăng nhập, họ tên, email..."
                               value="@ViewBag.SearchString" style="min-width: 250px;" />
                    </div>
                    <div class="form-group mr-3">
                        <select name="roleId" class="form-control form-control-sm">
                            <option value="">Tất cả vai trò</option>
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.RoleId"
                                            selected="@(ViewBag.SelectedRoleId == role.RoleId ? "selected" : null)">
                                        @role.RoleName
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "User")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Chưa có người dùng nào. <a href="@Url.Action("Create", "User")">Thêm người dùng đầu tiên</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Tên đăng nhập</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Vai trò</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserId</td>
                                <td><strong>@item.Username</strong></td>
                                <td>@item.FullName</td>
                                <td>@(item.Email ?? "Chưa cập nhật")</td>
                                <td>
                                    <span class="badge badge-info">
                                        @(item.RoleNavigation?.RoleName ?? "Chưa phân vai trò")
                                    </span>
                                </td>
                                <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", "User", new { id = item.UserId })"
                                           class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "User", new { id = item.UserId })"
                                           class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "User", new { id = item.UserId })"
                                           class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


