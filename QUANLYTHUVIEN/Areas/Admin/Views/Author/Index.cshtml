@model IEnumerable<QUANLYTHUVIEN.Models.Author>

@{
    ViewData["Title"] = "Quản lý Tác giả";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Tác giả</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Author", new { area = "Admin" })" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm tác giả
                </a>
            </div>
        </div>

        <!-- Search Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm theo tên tác giả..."
                               value="@ViewBag.SearchString" style="min-width: 300px;" />
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "Author", new { area = "Admin" })" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <!-- Thông báo -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-info">Chưa có tác giả nào.</div>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ảnh đại diện</th>
                        <th>Tên tác giả</th>
                        <th>Tiểu sử</th>
                        <th>Số sách</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorId</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="@Url.Content("~/images/Authors/" + item.Image)" alt="@item.AuthorName"
                                         class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" 
                                         onerror="this.src='@Url.Content("~/images/Authors/default-avatar.jpg")'" />
                                }
                                else
                                {
                                    <img src="@Url.Content("~/images/Authors/default-avatar.jpg")" alt="@item.AuthorName"
                                         class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                            </td>
                            <td>@item.AuthorName</td>
                            <td>@(item.Biography?.Length > 50 ? item.Biography.Substring(0, 50) + "..." : item.Biography ?? "Không có tiểu sử")</td>
                            <td>@item.Books.Count</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="@Url.Action("Details", "Author", new { area = "Admin", id = item.AuthorId })" class="btn btn-info btn-sm" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Author", new { area = "Admin", id = item.AuthorId })" class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Author", new { area = "Admin", id = item.AuthorId })" class="btn btn-danger btn-sm" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>


