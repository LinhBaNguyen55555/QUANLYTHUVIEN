@model QUANLYTHUVIEN.Models.Author

@{
    ViewData["Title"] = "Chỉnh sửa Tác giả";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa Tác giả</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="AuthorId" />
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Image" id="Image" class="form-control" placeholder="Tên file ảnh (ví dụ: author-01.jpg)" />
                    <div class="input-group-append">
                        <button type="button" class="btn btn-outline-secondary" onclick="openImageBrowser('Image', 'images/Authors')">
                            <i class="fas fa-folder-open"></i> Chọn ảnh
                        </button>
                    </div>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
                <small class="form-text text-muted">Nhập tên file ảnh hoặc click "Chọn ảnh" để chọn từ thư viện</small>
                <div class="mt-2">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img id="ImagePreview" src="~/images/Authors/@Model.Image" alt="Preview" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <img id="ImagePreview" src="" alt="Preview" style="max-width: 200px; max-height: 200px; display: none;" class="img-thumbnail" />
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a href="@Url.Action("Index", "Author")" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Image').on('input', function () {
                var imageValue = $(this).val();
                var preview = $('#ImagePreview');
                if (imageValue) {
                    preview.attr('src', '/images/Authors/' + imageValue);
                    preview.show();
                } else {
                    preview.hide();
                }
            });
        });
    </script>
}


