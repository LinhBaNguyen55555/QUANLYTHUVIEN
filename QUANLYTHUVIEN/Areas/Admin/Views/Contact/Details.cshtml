@model QUANLYTHUVIEN.Models.Contact

@{
    ViewData["Title"] = "Chi tiết Tin nhắn Liên hệ";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Chi tiết Tin nhắn Liên hệ từ: @Model.FullName</h6>
        <div>
            <a href="@Url.Action("Index", "Contact")" class="btn btn-secondary btn-sm">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.ContactID</dd>

                    <dt class="col-sm-3">Họ và tên</dt>
                    <dd class="col-sm-9"><strong>@Model.FullName</strong></dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </dd>

                    <dt class="col-sm-3">Số điện thoại</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <a href="tel:@Model.Phone">@Model.Phone</a>
                        }
                        else
                        {
                            <span class="text-muted">Chưa cập nhật</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Ngày gửi</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                    <dt class="col-sm-3">Nội dung</dt>
                    <dd class="col-sm-9">
                        <div class="card border-light">
                            <div class="card-body" style="white-space: pre-wrap; word-wrap: break-word;">
                                @Model.Content
                            </div>
                        </div>
                    </dd>
                </dl>
            </div>

            <div class="col-md-4">
                <div class="card border-info">
                    <div class="card-header bg-info text-white">
                        <i class="fas fa-info-circle"></i> Thông tin liên hệ
                    </div>
                    <div class="card-body">
                        <p><strong>Email:</strong><br />
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <p><strong>Điện thoại:</strong><br />
                                <a href="tel:@Model.Phone">@Model.Phone</a>
                            </p>
                        }
                        <hr />
                        <p class="text-muted small">
                            <i class="fas fa-clock"></i> Gửi lúc: @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")
                        </p>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Delete", "Contact", new { id = Model.ContactID })" 
                       class="btn btn-danger btn-block" 
                       onclick="return confirm('Bạn có chắc chắn muốn xóa tin nhắn này?');">
                        <i class="fas fa-trash"></i> Xóa tin nhắn
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

