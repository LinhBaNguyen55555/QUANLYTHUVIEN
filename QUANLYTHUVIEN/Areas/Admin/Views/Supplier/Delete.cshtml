@model QUANLYTHUVIEN.Models.Supplier

@{
    ViewData["Title"] = "Xóa Nhà cung cấp";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Xác nhận xóa Nhà cung cấp</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
            <p>Bạn có chắc chắn muốn xóa nhà cung cấp này? Hành động này không thể hoàn tác.</p>
        </div>

        <div class="card border-danger">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.SupplierId</dd>

                    <dt class="col-sm-3">Tên nhà cung cấp</dt>
                    <dd class="col-sm-9"><strong>@Model.SupplierName</strong></dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@(Model.Email ?? "Chưa cập nhật")</dd>

                    <dt class="col-sm-3">Số điện thoại</dt>
                    <dd class="col-sm-9">@(Model.Phone ?? "Chưa cập nhật")</dd>

                    <dt class="col-sm-3">Địa chỉ</dt>
                    <dd class="col-sm-9">@(Model.Address ?? "Chưa cập nhật")</dd>
                </dl>
            </div>
        </div>

        @if (Model.Orders.Any())
        {
            <div class="alert alert-danger">
                <h6><i class="fas fa-times-circle"></i> Không thể xóa nhà cung cấp này</h6>
                <p>Nhà cung cấp này có đơn hàng liên quan và không thể xóa:</p>
                <ul>
                    @foreach (var order in Model.Orders)
                    {
                        <li>Đơn hàng #@order.OrderId - @order.OrderDate?.ToString("dd/MM/yyyy")</li>
                    }
                </ul>
                <p>Vui lòng xóa hoặc chuyển các đơn hàng liên quan trước khi xóa nhà cung cấp.</p>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index", "Supplier")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        }
        else
        {
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="SupplierId" />

                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                    <a href="@Url.Action("Index", "Supplier")" class="btn btn-secondary ml-2">
                        <i class="fas fa-arrow-left"></i> Hủy bỏ
                    </a>
                </div>
            </form>
        }
    </div>
</div>


