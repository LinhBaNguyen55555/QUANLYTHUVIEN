@model IEnumerable<QUANLYTHUVIEN.Models.Supplier>

@{
    ViewData["Title"] = "Quản lý Nhà cung cấp";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách Nhà cung cấp</h6>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Supplier")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm nhà cung cấp
                </a>
            </div>
        </div>

        <!-- Search Form -->
        <div class="row mt-3">
            <div class="col-md-12">
                <form method="get" class="form-inline">
                    <div class="form-group mr-3">
                        <input type="text" name="searchString" class="form-control form-control-sm"
                               placeholder="Tìm kiếm theo tên, email, số điện thoại..."
                               value="@ViewBag.SearchString" style="min-width: 300px;" />
                    </div>
                    <button type="submit" class="btn btn-secondary btn-sm mr-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index", "Supplier")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Chưa có nhà cung cấp nào. <a href="@Url.Action("Create", "Supplier")">Thêm nhà cung cấp đầu tiên</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Số đơn hàng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SupplierId</td>
                                <td><strong>@item.SupplierName</strong></td>
                                <td>@(item.Email ?? "Chưa cập nhật")</td>
                                <td>@(item.Phone ?? "Chưa cập nhật")</td>
                                <td>@(item.Address ?? "Chưa cập nhật")</td>
                                <td>
                                    <span class="badge badge-info">@item.Orders.Count</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", "Supplier", new { id = item.SupplierId })"
                                           class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Supplier", new { id = item.SupplierId })"
                                           class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Supplier", new { id = item.SupplierId })"
                                           class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

