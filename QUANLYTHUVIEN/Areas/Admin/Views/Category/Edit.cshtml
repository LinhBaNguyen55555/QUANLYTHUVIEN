@model QUANLYTHUVIEN.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa Thể loại";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa Thể loại</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-area="Admin" asp-controller="Category" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" name="fromDetails" value="@(ViewBag.FromDetails == true ? "true" : "false")" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>