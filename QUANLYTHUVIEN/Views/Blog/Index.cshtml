@model IEnumerable<QUANLYTHUVIEN.Models.TbBlog>
@using QUANLYTHUVIEN.Utilities
@using System.Globalization

@{
    ViewData["Title"] = "Bài viết";
    var culture = new CultureInfo("vi-VN");
}

<!-- Start: Page Banner -->
<section class="page-banner services-banner">
    <div class="container">
        <div class="banner-header">
            <h2>Bài viết</h2>
            <span class="underline center"></span>
            <p class="lead">Khám phá những bài viết mới nhất từ thư viện</p>
        </div>
        <div class="breadcrumb">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                <li>Bài viết</li>
            </ul>
        </div>
    </div>
</section>
<!-- End: Page Banner -->

<!-- Start: Blog Section -->
<div id="content" class="site-content">
    <div id="primary" class="content-area">
        <main id="main" class="site-main">
            <div class="blog-main-list">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="filter-options margin-list" style="margin-top: 30px; margin-bottom: 20px;">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6">
                                        <div class="filter-result">
                                            Hiển thị @ViewBag.StartItem đến @ViewBag.EndItem trong tổng số @ViewBag.TotalBlogs bài viết
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="blog-page grid">
                                @foreach (var blog in Model)
                                {
                                    var blogAlias = Function.TitleSlugGenerationAlias(blog.Title);
                                    var createdDate = blog.CreatedDate ?? DateTime.Now;
                                    var day = createdDate.ToString("dd");
                                    var month = createdDate.ToString("MMM", culture);
                                    var truncatedContent = !string.IsNullOrEmpty(blog.Content) && blog.Content.Length > 200 
                                        ? blog.Content.Substring(0, 200) + "..." 
                                        : blog.Content ?? "";

                                    <article>
                                        <div class="grid-item blog-item">
                                            <div class="post-thumbnail">
                                                <div class="post-date-box">
                                                    <div class="post-date">
                                                        <a class="date" href="@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias })">@day</a>
                                                    </div>
                                                    <div class="post-date-month">
                                                        <a class="month" href="@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias })">@month</a>
                                                    </div>
                                                </div>
                                                <a href="@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias })">
                                                    <img alt="@blog.Title" src="@Url.Content(blog.BlogImageUrl)" style="width: 100%; height: 300px; object-fit: cover;" />
                                                </a>
                                                <div class="post-share">
                                                    <a href="@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias })#comments">
                                                        <i class="fa fa-comment"></i> @(blog.TbBlogComments?.Where(c => c.IsApproved).Count() ?? 0)
                                                    </a>
                                                    <a href="#">
                                                        <i class="fa fa-thumbs-o-up"></i> 0
                                                    </a>
                                                    <a href="#">
                                                        <i class="fa fa-eye"></i> @(blog.Views ?? 0)
                                                    </a>
                                                    <a href="#" onclick="shareBlog('@blog.Title', '@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias }, Context.Request.Scheme)'); return false;">
                                                        <i class="fa fa-share-alt"></i> Chia sẻ
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="post-detail">
                                                <header class="entry-header">
                                                    <div class="blog_meta_category">
                                                        <span class="arrow-right"></span>
                                                        <a href="@Url.Action("Index", "Blog")" rel="category tag">Bài viết</a>
                                                    </div>
                                                    <h3 class="entry-title">
                                                        <a href="@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias })">@blog.Title</a>
                                                    </h3>
                                                    <div class="entry-meta">
                                                        <span>
                                                            <i class="fa fa-user"></i> 
                                                            <a href="#">@(blog.Author?.FullName ?? blog.Author?.Username ?? "Admin")</a>
                                                        </span>
                                                        <span>
                                                            <i class="fa fa-comment"></i> 
                                                            <a href="@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias })#comments">
                                                                @(blog.TbBlogComments?.Where(c => c.IsApproved).Count() ?? 0) Bình luận
                                                            </a>
                                                        </span>
                                                        <span>
                                                            <i class="fa fa-calendar"></i> 
                                                            @createdDate.ToString("dd/MM/yyyy", culture)
                                                        </span>
                                                    </div>
                                                </header>
                                                <div class="entry-content">
                                                    <p>@Html.Raw(truncatedContent)</p>
                                                </div>
                                                <footer class="entry-footer">
                                                    <a class="btn btn-default" href="@Url.Action("Details", "Blog", new { id = blog.BlogId, alias = blogAlias })">Đọc thêm</a>
                                                </footer>
                                            </div>
                                        </div>
                                    </article>
                                }
                            </div>

                            @if (!Model.Any())
                            {
                                <div class="alert alert-info text-center" style="margin-top: 30px; padding: 40px;">
                                    <i class="fa fa-info-circle" style="font-size: 48px; color: #5bc0de; margin-bottom: 20px;"></i>
                                    <h4>Chưa có bài viết nào</h4>
                                    <p>Hiện tại chưa có bài viết nào được xuất bản.</p>
                                </div>
                            }

                            <!-- Phân trang -->
                            @if (ViewBag.TotalPages > 1)
                            {
                                <nav class="navigation pagination text-center" style="margin-top: 50px;">
                                    <h2 class="screen-reader-text">Posts navigation</h2>
                                    <div class="nav-links">
                                        @if (ViewBag.CurrentPage > 1)
                                        {
                                            <a class="prev page-numbers" href="@Url.Action("Index", "Blog", new { searchString = ViewBag.SearchString, page = ViewBag.CurrentPage - 1 })">
                                                <i class="fa fa-long-arrow-left"></i> Trước
                                            </a>
                                        }

                                        @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                                        {
                                            if (i == ViewBag.CurrentPage)
                                            {
                                                <span class="page-numbers current">@i</span>
                                            }
                                            else
                                            {
                                                <a class="page-numbers" href="@Url.Action("Index", "Blog", new { searchString = ViewBag.SearchString, page = i })">@i</a>
                                            }
                                        }

                                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                        {
                                            <a class="next page-numbers" href="@Url.Action("Index", "Blog", new { searchString = ViewBag.SearchString, page = ViewBag.CurrentPage + 1 })">
                                                Sau <i class="fa fa-long-arrow-right"></i>
                                            </a>
                                        }
                                    </div>
                                </nav>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<!-- End: Blog Section -->

<script>
    function shareBlog(title, url) {
        if (navigator.share) {
            navigator.share({
                title: title,
                url: url
            }).catch(console.error);
        } else {
            // Fallback: copy to clipboard
            navigator.clipboard.writeText(url).then(function() {
                alert('Đã sao chép link bài viết!');
            });
        }
    }
</script>


