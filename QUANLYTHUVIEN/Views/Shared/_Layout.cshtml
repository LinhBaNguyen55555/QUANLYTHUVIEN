            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
            padding: 0;
            z-index: 1000;
            display: none;
            opacity: 0;
            transform: translateY(-10px);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }
        
        .header-cart.show-cart .cart-dropdown,
        .header-cart:hover .cart-dropdown {
            display: block !important;
            opacity: 1;
            transform: translateY(0);
        }
        
        .header-cart .cart-dropdown::before {
            content: '';
            position: absolute;
            top: -8px;
            right: 20px;
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-bottom: 8px solid #fff;
        }
        
        .header-cart .cart-dropdown ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .header-cart .cart-dropdown ul li {
            padding: 15px;
            border-bottom: 1px solid #e5e5e5;
            display: flex;
            align-items: center;
            transition: background-color 0.2s ease;
        }
        
        .header-cart .cart-dropdown ul li:hover {
            background-color: #f8f9fa;
        }
        
        .header-cart .cart-dropdown .remove {
            color: #d9534f;
            margin-left: 10px;
            font-size: 18px;
            text-decoration: none;
            transition: color 0.2s ease;
        }
        
        .header-cart .cart-dropdown .remove:hover {
            color: #c9302c !important;
        }
        
        /* Animation cho thông báo giỏ hàng trống */
        .cart-empty-message {
            animation: fadeIn 0.3s ease-in-out;
        }
        
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Smooth transition khi thay đổi nội dung */
        #cart-dropdown-content {
            transition: opacity 0.2s ease;
        }
        
        #cart-dropdown-content ul {
            animation: slideIn 0.3s ease-in-out;
        }
        
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        .header-cart .cart-icon {
            cursor: pointer;
        }
        
    </style>

    @RenderSection("Scripts", required: false)

</body>


</html>