    <script>
        // Load cart count and items on page load
        $(document).ready(function() {
            loadCartCount();
            loadCartItems();
            
            // Load cart items when hovering over cart icon
            var cartHoverTimeout;
            $('.header-cart').on('mouseenter', function() {
                clearTimeout(cartHoverTimeout);
                loadCartItems();
                $(this).addClass('show-cart');
            }).on('mouseleave', function() {
                var self = this;
                cartHoverTimeout = setTimeout(function() {
                    $(self).removeClass('show-cart');
                }, 200);
            });
        });

        function loadCartCount() {
            $.ajax({
                url: '@Url.Action("GetCartCount", "Cart")',
                type: 'GET',
                success: function(response) {
                    $('#cart-count-header').text(response.cartCount);
                }
            });
        }

        function loadCartItems() {
            $.ajax({
                url: '@Url.Action("GetCartItems", "Cart")',
                type: 'GET',
                success: function(response) {
                    var content = $('#cart-dropdown-content');
                    var totalSection = $('#cart-total-section');
                    
                    if (response.items && response.items.length > 0) {
                        // Fade out trước khi thay đổi nội dung
                        content.css('opacity', '0.5');
                        setTimeout(function() {
                            var html = '<ul style="list-style: none; padding: 0; margin: 0;">';
                            response.items.forEach(function(item) {
                            var imageUrl = item.coverImageUrl;
                            if (imageUrl.startsWith('~/')) {
                                imageUrl = imageUrl.replace('~/', '');
                            }
                            if (!imageUrl.startsWith('/')) {
                                imageUrl = '/' + imageUrl;
                            }
                            html += '<li class="clearfix" style="padding: 15px; border-bottom: 1px solid #e5e5e5; display: flex; align-items: center;">';
                            html += '<img src="' + imageUrl + '" alt="' + item.title + '" style="width: 60px; height: 80px; object-fit: cover; margin-right: 15px;" onerror="this.src=\'/images/books-media/gird-view/book-media-grid-01.jpg\'" />';
                            html += '<div class="item-info" style="flex: 1;">';
                            html += '<div class="name" style="font-weight: bold; margin-bottom: 5px;"><a href="#" style="color: #333; text-decoration: none;">' + item.title + '</a></div>';
                            html += '<div class="author" style="font-size: 12px; color: #666; margin-bottom: 5px;"><strong>Tác giả:</strong> ' + item.authorNames + '</div>';
                            html += '<div class="price" style="font-size: 14px; color: #ff7236; font-weight: bold;">' + item.quantity + ' X ' + item.dailyRate.toLocaleString('vi-VN') + ' đ</div>';
                            html += '</div>';
                            html += '<a class="remove" href="javascript:void(0)" onclick="removeFromCartDropdown(' + item.bookId + ')" style="color: #d9534f; margin-left: 10px; font-size: 18px;"><i class="fa fa-trash-o"></i></a>';
                            html += '</li>';
                            });
                            html += '</ul>';
                            content.html(html);
                            content.css('opacity', '1'); // Fade in lại
                            $('#cart-dropdown-total').text(response.totalAmount.toLocaleString('vi-VN') + ' đ');
                            totalSection.show();
                        }, 150);
                    } else {
                        var emptyHtml = '<div class="cart-empty-message" style="padding: 40px 20px; text-align: center; opacity: 0; transition: opacity 0.3s ease;">';
                        emptyHtml += '<i class="fa fa-shopping-cart" style="font-size: 48px; color: #ddd; margin-bottom: 15px; display: block;"></i>';
                        emptyHtml += '<p style="margin: 0; color: #999; font-size: 14px;">Giỏ hàng đang trống</p>';
                        emptyHtml += '</div>';
                        content.html(emptyHtml);
                        totalSection.hide();
                        // Fade in animation
                        setTimeout(function() {
                            content.find('.cart-empty-message').css('opacity', '1');
                        }, 10);
                    }
                },
                error: function() {
                    console.error('Error loading cart items');
                }
            });
        }

        function updateCartCount(count) {
            $('#cart-count-header').text(count);
            loadCartItems(); // Reload items when count changes
        }

        function removeFromCartDropdown(bookId) {
            if (!confirm('Bạn có chắc muốn xóa sách này khỏi giỏ hàng?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("RemoveFromCart", "Cart")',
                type: 'POST',
                data: { bookId: bookId },
                success: function (response) {
                    if (response.success) {
                        updateCartCount(response.cartCount);
                        loadCartItems();
                        toastr.success('Đã xóa khỏi giỏ hàng');
                    }
                },
                error: function () {
                    toastr.error('Có lỗi xảy ra khi xóa khỏi giỏ hàng');
                }
            });
        }
    </script>
    
