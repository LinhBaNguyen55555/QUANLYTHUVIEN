@model IEnumerable<QUANLYTHUVIEN.Models.Book>

<div id="category-filter">
    <ul class="category-list">
        @foreach (var item in Model)
        {
            <li class="category-item books">
                <figure>

                    <img src="@Url.Content(!string.IsNullOrEmpty(item.CoverImage)
                                                      ? "~/images/category-filter/home-v1/" + item.CoverImage
                                                      : "~/images/category-filter/home-v1/category-filter-img-01.jpg")" alt="@item.Title" />

                    <figcaption class="bg-orange">
                        <div class="info-block">
                            <h4>@item.Title</h4>
                            <span class="author">
                                <strong>Author:</strong>
                                @(item.Authors != null && item.Authors.Any() ? string.Join(", ", item.Authors.Select(a => a.AuthorName)) : "N/A")
                            </span>
                            <span class="author">
                                <strong>ISBN:</strong> @item.Isbn
                            </span>

                            <div class="rating">
                                <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                            </div>

                            <p>
                                @(string.IsNullOrEmpty(item.Description)
                                                            ? "No description available."
                                                            : (item.Description.Length > 180
                                                            ? item.Description.Substring(0, 180) + "..."
                                                            : item.Description))
                        </p>

                            <a href="#">Read More <i class="fa fa-long-arrow-right"></i></a>

                            <ol>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                                <li><a href="#"><i class="fa fa-share-alt"></i></a></li>
                                <li><a href="#"><i class="fa fa-search"></i></a></li>
                            </ol>
                        </div>
                    </figcaption>
                </figure>
            </li>
                }
    </ul>

    <div class="center-content">
        <a href="#" class="btn btn-primary">View More</a>
    </div>
    <div class="clearfix"></div>
</div>