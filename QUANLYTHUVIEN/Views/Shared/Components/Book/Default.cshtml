@model IEnumerable<QUANLYTHUVIEN.Models.Book>

<div id="category-filter">
    <ul class="category-list">
        @foreach (var item in Model)
        {
            // --- BẮT ĐẦU PHẦN SỬA QUAN TRỌNG ---

            // 1. Tạo "slug" (tag) cho danh mục
            // Logic này PHẢI GIỐNG HỆT logic ở Bước 5 (CategoryFilter)
            string categoryTag = "unknown"; // Mặc định nếu sách không có category
            if (item.Category != null && !string.IsNullOrEmpty(item.Category.CategoryName))
            {
                categoryTag = item.Category.CategoryName.ToLower()
                .Replace(" & ", "-")
                .Replace(" ", "-");
            }

            // 2. Thêm tag này vào class của 'li'
            // (Ví dụ: <li class="category-item books kids-teens">)
            <li class="category-item books @categoryTag">

                // --- KẾT THÚC PHẦN SỬA QUAN TRỌNG ---

                <figure>
                    <img src="@Url.Content(item.CoverImageUrl)" alt="@item.Title" />

                    <figcaption class="bg-orange">
                        <div class="info-block">
                            <h4>@item.Title</h4>

                            <span class="author">
                                <strong>Author:</strong>
                                @item.AuthorNames
                            </span>

                            <span class="author">
                                <strong>ISBN:</strong>
                                @item.DisplayIsbn
                            </span>

                            <div class="rating">
                                <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                            </div>

                            <p>
                                @item.TruncatedDescription
                            </p>

                            <a href="#">
                                Read More <i class="fa fa-long-arrow-right"></i>
                            </a>

                            <ol>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                                <li><a href="#"><i class="fa fa-share-alt"></i></a></li>
                                <li><a href="#"><i class="fa fa-search"></i></a></li>
                            </ol>

                        </div>
                    </figcaption>
                </figure>
            </li>
        }
    </ul>

    <div class="center-content">
        <a href="#" class="btn btn-primary">View More</a>
    </div>

    <div class="clearfix"></div>
</div>