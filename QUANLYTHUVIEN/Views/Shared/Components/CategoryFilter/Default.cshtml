@model IEnumerable<QUANLYTHUVIEN.Models.Category>

<div class="filter-buttons">
    <div class="filter btn" data-filter="all">TẤT CẢ</div>

    @foreach (var category in Model)
    {
        
        string filterTag = category.CategoryName.ToLower()
        .Replace(" & ", "-")
        .Replace(" ", "-");

        <div class="filter btn" data-filter=".@filterTag">
            @category.CategoryName
        </div>
    }
</div>
